<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Book #<%= @book.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_book/<%= @book.id %>" class="form-horizontal">

      <!-- Label and input for author_id -->
      <div class="form-group">

        <label for="author_id" class="col-sm-2 control-label">
          Author
        </label>
        <div class="col-sm-10">

          <input type="text" id="author_id" name="author_id" placeholder="Author" class="form-control" value="<%= @book.author_id %>">

        </div>

      </div>


      <!-- Label and input for title -->
      <div class="form-group">

        <label for="title" class="col-sm-2 control-label">
          Title
        </label>
        <div class="col-sm-10">

          <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @book.title %>">

        </div>

      </div>


      <!-- Label and input for year -->
      <div class="form-group">

        <label for="year" class="col-sm-2 control-label">
          Year
        </label>
        <div class="col-sm-10">

          <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="<%= @book.year %>">

        </div>

      </div>


      <!-- Label and input for category -->
      <div class="form-group">

        <label for="category" class="col-sm-2 control-label">
          Category
        </label>
        <div class="col-sm-10">

          <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="<%= @book.category %>">

        </div>

      </div>


      <!-- Label and input for picture -->
      <div class="form-group">

        <label for="picture" class="col-sm-2 control-label">
          Picture
        </label>
        <div class="col-sm-10">

          <input type="text" id="picture" name="picture" placeholder="Picture" class="form-control" value="<%= @book.picture %>">

        </div>

      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Book" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

