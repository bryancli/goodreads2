<div class="page-header">
  <h1>Reviews</h1>
</div>


<p><a href="/reviews/new" class="btn btn-primary">Add a New Review</a></p>


<table class="table table-hover">
  <thead>
    <tr>

      <th>Book</th>

      <th>Reviewer</th>

      <th>Summary</th>

<!--       <th>Fullreview</th>

      <th>Startdate</th>

      <th>Enddate</th>

      <th>Enlightenmentrating</th>

      <th>Enjoymentrating</th> -->

      <th>Overall Rating</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>

        <td><%= review.book.title %></td>

        <td><%= review.user.username %></td>

        <td><%= review.summary %></td>

<!--         <td><%= review.fullReview %></td>

        <td><%= review.startDate %></td>

        <td><%= review.endDate %></td>

        <td><%= review.enlightenmentRating %></td>

        <td><%= review.enjoymentRating %></td> -->

        <td><%= review.overallRating %></td>


        <td>
          <a href="/reviews/<%= review.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>

        <% if current_user == review.user %>
        <td>
          <a href="/delete_review/<%= review.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

